<!DOCTYPE html>
<html ng-app="TodoApp" ng-controller="MainController as mainCtrl">
<head>
  <title ng-bind="mainCtrl.Template.getTitle()">
    Todo
  </title>

  <%= favicon_link_tag 'favicon.ico' %>
  <%= stylesheet_link_tag 'application', media: 'all' %>

  <%= csrf_meta_tags %>
</head>
<body class="{{ mainCtrl.Template.getBodyClasses() }}">
  <div class="app-loading" ng-animate-children app-preload>
    <div id="loader"></div>
  </div>

  <%= yield %>

  <div class="notifications-list">
    <div ng-repeat="n in mainCtrl.notifications"
         class="notification {{ n.type }}"
         ng-click="mainCtrl.removeNotification(n)">
      <div class="title">{{ n.title }}</div>
      <div class="text">{{ n.text }}</div>
    </div>
  </div>

  <%= javascript_include_tag 'application' %>
</body>
</html>
